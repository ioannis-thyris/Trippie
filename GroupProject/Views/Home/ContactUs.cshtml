@model GroupProject.Models.Dtos.SendEmailDto



<div class="container px-5 my-5 justify-content-center">
    @using (Html.BeginForm("ContactUs", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()
    <div class="col-md-8">
        <h2 class="display-4"> <i class="fa-regular fa-envelope"></i> Contact us</h2>
        <hr />
        @{
            if (ViewBag.Message != null)
            {
                <!-- Success Alert Message -->
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong><span> <i class="bi bi-send-check"></i> </span> @ViewBag.Message</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>

            }
        }

        <div class="row mb-3 mx-5 py-2">
            <div class="form-group col-md-10">
                <div class="input-group">
                    <div class="input-group-text">
                        <span>@Html.LabelFor(m => m.Name, new { @class = "control-label fw-bold" })</span>
                    </div>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg" })
                </div>
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger fw-bold" })
            </div>
        </div>
        <div class="row mb-3 mx-5 py-2">
            <div class="form-group col-md-10">
                <div class="input-group">
                    <div class="input-group-text">
                        <span>@Html.LabelFor(m => m.Email, new { @class = "control-label fw-bold" })</span>
                    </div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg" })
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger fw-bold" })
            </div>
        </div>
        <div class="row mb-3 mx-5 py-2">
            <div class="form-group col-md-10">
                <div class="input-group">
                    <div class="input-group-text">
                        <span>
                            @Html.LabelFor(m => m.Subject, new { @class = "control-label fw-bold" })
                        </span>
                    </div>
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control form-control-lg" })
                </div>
                @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger fw-bold" })
            </div>
        </div>

        <div class="row mb-3 mx-5 py-2">
            <div class="form-group col-md-10">
                <div class="input-group">
                    <div class="input-group-text">
                        <span>
                            @Html.LabelFor(m => m.Message, new { @class = "control-label fw-bold" })
                        </span>
                    </div>
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control form-control-lg", rows = 3 })
                </div>
                @Html.ValidationMessageFor(m => m.Message, "", new { @class = "my-5 text-danger fw-bold" })
            </div>
        </div>
        

        <div class="col-md-3 d-flex justify-content-sm-evenly mx-5">
            <button class="btn btn-success" id="submitButton" type="submit"><i class="bi bi-send"></i> Send</button>
            <div class="vr">
            </div>
            <button class="btn btn-secondary" type="reset" id="resetForm"><i class="bi bi-x-circle"></i> Reset</button>
        </div>
    </div>


    }
</div>


