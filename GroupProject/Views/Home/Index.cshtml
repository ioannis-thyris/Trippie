@{
    ViewBag.Title = "Home Page";
}

@{
    if (ViewBag.Message != null)
    {

        <div class="alert alert-primary" role="alert">
            @ViewBag.Message
        </div>

    }
}



<!-- Header-->
<div id="page-top">
    <header class="text-white container-fluid" style="background-color: #21D4FD; background-image: linear-gradient(19deg, #21D4FD 0%, #B721FF 100%); ">
