@model GroupProject.Models.AdminViewModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<div class="container px-5 my-5 justify-content-center mx-5">
    <h4 class="mx-5 px-3 display-4"><i class="fas fa-tools"></i> Admin dashboard</h4>
    <p class="fs-5 text-muted mx-5">
        All the available statistics only for admin users.
    </p>
    <hr />
</div>
<div class="container">
    <section>
        <div class="row d-flex justify-content-around border-bottom border-2 border-dark py-2">
            <div class="col-md-3">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="#24CC7D" class="bi bi-person-check-fill bd-placeholder-img bg-light rounded-circle p-3" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                        <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    </svg>
                </div>
                <h2 class="display-6">Users: <span class="badge bg-success">@Model.NumberOfUsers</span></h2>
            </div><!-- /.col-lg-4 -->
            <div class="col-md-3">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="#24CC7D" class="bi bi-car-front-fill bd-placeholder-img bg-light rounded-circle p-3" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M2.52 3.515A2.5 2.5 0 0 1 4.82 2h6.362c1 0 1.904.596 2.298 1.515l.792 1.848c.075.175.21.319.38.404.5.25.855.715.965 1.262l.335 1.679c.033.161.049.325.049.49v.413c0 .814-.39 1.543-1 1.997V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.338c-1.292.048-2.745.088-4 .088s-2.708-.04-4-.088V13.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1.892c-.61-.454-1-1.183-1-1.997v-.413a2.5 2.5 0 0 1 .049-.49l.335-1.68c.11-.546.465-1.012.964-1.261a.807.807 0 0 0 .381-.404l.792-1.848ZM3 10a1 1 0 1 0 0-2 1 1 0 0 0 0 2Zm10 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2ZM6 8a1 1 0 0 0 0 2h4a1 1 0 1 0 0-2H6ZM2.906 5.189l.956-1.913A.5.5 0 0 1 4.309 3h7.382a.5.5 0 0 1 .447.276l.956 1.913a.51.51 0 0 1-.497.731c-.91-.073-3.35-.17-4.597-.17-1.247 0-3.688.097-4.597.17a.51.51 0 0 1-.497-.731Z" />
                    </svg>
                </div>
                <h2 class="display-6">Trips: <span class="badge bg-success">@Model.NumberOfTrips</span></h2>
            </div><!-- /.col-lg-4 -->
            <div class="col-md-3">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="#24CC7D" class="bi bi-building bd-placeholder-img bg-light rounded-circle p-3" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14.763.075A.5.5 0 0 1 15 .5v15a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V14h-1v1.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V10a.5.5 0 0 1 .342-.474L6 7.64V4.5a.5.5 0 0 1 .276-.447l8-4a.5.5 0 0 1 .487.022zM6 8.694 1 10.36V15h5V8.694zM7 15h2v-1.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5V15h2V1.309l-7 3.5V15z" />
                        <path d="M2 11h1v1H2v-1zm2 0h1v1H4v-1zm-2 2h1v1H2v-1zm2 0h1v1H4v-1zm4-4h1v1H8V9zm2 0h1v1h-1V9zm-2 2h1v1H8v-1zm2 0h1v1h-1v-1zm2-2h1v1h-1V9zm0 2h1v1h-1v-1zM8 7h1v1H8V7zm2 0h1v1h-1V7zm2 0h1v1h-1V7zM8 5h1v1H8V5zm2 0h1v1h-1V5zm2 0h1v1h-1V5zm0-2h1v1h-1V3z" />
                    </svg>
                </div>
                <h2 class="display-6">Cities: <span class="badge bg-success">@Model.NumberOfCities</span></h2>
            </div><!-- /.col-lg-4 -->
            <div class="col-md-3">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="#24CC7D" class="bi bi-geo-alt-fill bd-placeholder-img bg-light rounded-circle p-3" viewBox="0 0 16 16">
                        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                    </svg>
                </div>
                <h2 class="display-6">Places: <span class="badge bg-success">@Model.NumberOfPlaces</span> </h2>
            </div><!-- /.col-lg-4 -->

        </div>
        <div class="row d-flex justify-content-between py-2 border-bottom border-2 border-dark">
            <div class="col-md-5">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="#24CC7D" class="bi bi-pin-map-fill  bd-placeholder-img bg-light rounded-circle p-3" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M3.1 11.2a.5.5 0 0 1 .4-.2H6a.5.5 0 0 1 0 1H3.75L1.5 15h13l-2.25-3H10a.5.5 0 0 1 0-1h2.5a.5.5 0 0 1 .4.2l3 4a.5.5 0 0 1-.4.8H.5a.5.5 0 0 1-.4-.8l3-4z" />
                        <path fill-rule="evenodd" d="M4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999z" />
                    </svg>
                </div>
                <h2 class="display-6">Average Places In Trip: <span class="badge bg-success">@Model.AveragePlacesInTrip</span> </h2>
            </div>
        </div>
    </section>

    <section class="border-start border-dark border-2 px-4">
        <div class="row py-2 mx-1  mb-2 justify-content-around">
            <h4 class="display-6 py-3 border-bottom border-1">Cities Statistics</h4>
            <div class="col-3">
                <h5 class="text-black-50 text-center">Most Selected Cities (Overall)</h5>
                <table class="table text-center">
                    <thead class="bg-light">
                        <tr class="text-uppercase text-success">
                            <th scope="col">City</th>
                            <th scope="col">Country</th>
                            <th scope="col">Times</th>
                        </tr>
                    </thead>
                    <tbody class="bg-black bg-opacity-75">
                        @foreach (var entry in Model.MostSelectedCitiesOverall)
                        {
                            <tr class="text-capitalize text-white">
                                <td>@entry.City.Name</td>
                                <td>@entry.City.Country</td>
                                <td>@entry.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-3">
                <h5 class="text-black-50 text-center">Most Selected Cities (Start)</h5>
                <table class="table text-center">
                    <thead class="bg-light">
                        <tr class="text-uppercase text-success">
                            <th scope="col">City</th>
                            <th scope="col">Country</th>
                            <th scope="col">Times</th>
                        </tr>
                    </thead>
                    <tbody class="bg-black bg-opacity-75">
                        @foreach (var entry in Model.MostSelectedCitiesStart)
                        {
                            <tr class="text-capitalize text-white">
                                <td>@entry.City.Name</td>
                                <td>@entry.City.Country</td>
                                <td>@entry.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-3">
                <h5 class="text-black-50 text-center">Most Selected Cities (End)</h5>
                <table class="table text-center">
                    <thead class="bg-light">
                        <tr class="text-uppercase text-success">
                            <th scope="col">City</th>
                            <th scope="col">Country</th>
                            <th scope="col">Times</th>
                        </tr>
                    </thead>
                    <tbody class="bg-black bg-opacity-75">
                        @foreach (var entry in Model.MostSelectedCitiesEnd)
                        {
                            <tr class="text-capitalize text-white">
                                <td>@entry.City.Name</td>
                                <td>@entry.City.Country</td>
                                <td>@entry.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row py-2 mx-1  mb-2 justify-content-around">
            <h4 class="display-6 py-3 border-bottom border-1"> Countries & Places Statistics</h4>
            <div class="col-3">
                    <h5 class="text-black-50 text-center">Most Active Countries</h5>
                    <table class="table text-center">
                        <thead class="bg-light">
                            <tr class="text-uppercase text-success">
                                <th scope="col">Country</th>
                                <th scope="col">Counter</th>
                            </tr>
                        </thead>
                        <tbody class="bg-black bg-opacity-75">
                            @foreach (var entry in Model.MostActiveCountries)
                            {
                                <tr class="text-capitalize text-white">
                                    <td>@entry.Name</td>
                                    <td>@entry.Count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-3">
                    <h5 class="text-black-50 text-center">Most Selected Place Types</h5>
                    <table class="table text-center">
                        <thead class="bg-light">
                            <tr class="text-uppercase text-success">
                                <th scope="col">Country</th>
                                <th scope="col">Counter</th>
                            </tr>
                        </thead>
                        <tbody class="bg-black bg-opacity-75">
                            @foreach (var entry in Model.MostSelectedPlaceTypes)
                            {
                                <tr class="text-capitalize text-white">
                                    <td>@entry.Name</td>
                                    <td>@entry.Count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

    </section>
</div>
