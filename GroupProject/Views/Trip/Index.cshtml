@model GroupProject.Models.TripViewModel
@using GroupProject.Models.Enums

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

@{
    var PlaceTypeEnumsValues = Enum.GetValues(typeof(PlaceTypeEnum));
}

<div>
    <form class="mt-5" id="input-from">
        <div class="row mb-4">
            <p class="text-center fs-4  fw-bold">Enter cities</p>
        </div>
        <div class="mb-4 d-flex gap-5 justify-content-center">
            <div class="form-group">
                <input class="form-control-lg width300" type="search" name="start" placeholder="Start" />
                <ul class="results list-group width300"></ul>
            </div>

            <div class="form-group">
                <input class="form-control-lg width300" type="search" name="destination" placeholder="Destination" />
                <ul class="results list-group width300"></ul>
            </div>
        </div>

        <div class="row mb-4">
            <p class="text-center fs-5 fw-bold">Choose place categories</p>

            <div id="select-container">
                @{

                    foreach (var type in Model.PlaceTypes)
                    {
                        <div id="type-select">
                            <label class="checkbox-inline" for="@type.Name">
                                @type.Name
                            </label>
                            @if (Model != null && Model.IsPremiumUser)
                            {
                                <input type="checkbox" name="@type.Name" value="@type.Id">
                            }
                            else
                            {
                                if (type.IsPremium ?? false)
                                {
                                    <input type="checkbox" name="@type.Name" value="@type.Id" disabled title="Premium user only">

                                }
                                else
                                {
                                    <input type="checkbox" name="@type.Name" value="@type.Id">
                                }
                            }
                        </div>
                    }
                }

            </div>
        </div>

        <div class="d-flex  justify-content-evenly mb-4">
            <div class="form-group w-25">
                <label for="radius" class="fw-bold">Search radius (km)</label>

                @if (Model != null && Model.IsPremiumUser)
                {
                    <input class="form-control mt-3" type="range" name="radius" value="7" min="1" max="20" step="1" />
                }
                else
                {
                    <input class="form-control mt-3" type="range" name="radius" value="7" min="1" max="20" step="1" disabled title="Premium user only" />
                }
                <p class="text-center fs-6"></p>
            </div>

            <div class="form-group w-25" title="Higher values will lead to higher loading times">
                <label for="points" class="fw-bold">Search points along path</label>

                @if (Model != null && Model.IsPremiumUser)
                {
                    <input class="form-control mt-3" type="range" name="points" value="8" min="5" max="25" step="1" />
                }
                else
                {
                    <input class="form-control mt-3" type="range" name="points" value="8" min="5" max="25" step="1" disabled title="Premium user only" />
                }


                <p class="text-center fs-6"></p>
            </div>

        </div>



        @{
            if (Model != null)
            {


            }
        }

        <div class="row">
            <div class="d-flex justify-content-center col-4 offset-4">
                <button type="button" class="btn btn-primary" id="start-button">Find route</button>
            </div>

        </div>

        <div class="map-container">
            <div class="map-overlay">
                <div class="spinner-border" role="status" hidden>
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <div id="map"></div>
            <div id="added-places">
                <div class="container-fluid">
                    <p class="text-center" id="title">Places</p>

                    <ol class="list-group" id="places-list">
                    </ol>

                </div>

                <button type="submit" class="btn btn-success" id="add-trip" disabled>Create trip</button>
            </div>


        </div>

    </form>

</div>

@{
    if (Model != null)
    {

        <script type="module" src="~/Scripts/trip/sliders.js"></script>
    }

}

@section scripts {
    <script type="module" src="~/Scripts/trip/autocomplete.js"></script>
    <script type="module" src="~/Scripts/trip/types.js"></script>
    <script type="module" src="~/Scripts/trip/directions.js"></script>
    <script type="module" src="~/Scripts/trip/places.js"></script>
    <script type="module" src="~/Scripts/trip/markers.js"></script>
    <script type="module" src="~/Scripts/trip/map.js"></script>
