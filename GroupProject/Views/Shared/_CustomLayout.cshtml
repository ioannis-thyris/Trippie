<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - Trip Organizer</title>
    <link href="~/Content/template-styles.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/6f29bb9435.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="~/Content/site.css" rel="stylesheet" />

</head>
<body>
    <!--  Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <div class="container px-5">
            @Html.ActionLink("Trippie", "Index", new { area = "", controller = "Home" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">

                <ul class="navbar-nav ms-auto gap-1">
                    <li class="nav-item">
                        <a class="btn btn-outline-light" href="#about">
                            <span>
                                <i class="far fa-lightbulb"></i>
                            </span>
                            <span>
                                The idea
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-danger" href="#Features">
                            <span>
                                <i class="fas fa-swatchbook"></i>
                            </span>
                            <span>
                                Features
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-info" href="#ourteam">
                            <i class="bi bi-people-fill"></i>
                            <span>
                                Our Team
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("ContactUs", "Home")" class="btn btn-outline-warning">
                            <i class="fa-regular fa-envelope"></i>
                            <span>
                                Contact us
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Pricing")" class="btn btn-outline-warning">
                            <i class="fa-regular fa-envelope"></i>
                            <span>
                                Pricing
                            </span>
                        </a>
                    </li>
                    
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("My Trips", "Login", "Account", null, new { @class = "nav-link" })
                            @Html.ActionLink("Log Out", "LogOff", "Account", null, new { @class = "nav-link stretched-link text-danger" })
                        }
                        else
                        {

                            <li class="nav-item">
                                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary">
                                    <span>
                                        <i class="bi bi-box-arrow-in-right"></i>
                                    </span>
                                    <span>
                                        Login
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Register", "Account")" class="btn btn-outline-success">
                                    <span>
                                        <i class="bi bi-person-plus"></i>
                                    </span>
                                    <span>
                                        Sign up
                                    </span>
                                </a>
                            </li>
                        }

                    }

                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()

        <!-- Footer-->
        <footer class="py-3 bg-dark fixed-bottom">
            <div class="container px-4"><p class="m-0 text-center text-white">&copy; @DateTime.Now.Year - Coding Bootcamp 2022</p></div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
