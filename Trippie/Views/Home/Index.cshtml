@{
    ViewBag.Title = "Home Page";
}

@{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-primary" role="alert">
            @ViewBag.Message
        </div>

    }
}
<!-- Header-->
<div id="page-top">
    <header class="text-black container-fluid" id="headerImg">
        <div class="container w-50 text-center">
            <div class="bg-light rounded-3 opacity-75 pb-3">
                <h1 class="fw-bolder display-1">Trippie</h1>
                <p class="lead">
                    <span>
                        <span class="fw-bolder">
                            Your road trip, simpler
                        </span>
                    </span>
                </p>
                <a href="@Url.Action("CreateTrip", "Trip")" class="btn btn-lg btn-dark">
                    <span>
                        <i class="bi bi-joystick"></i>
                    </span>
                    @{
                        if (ViewBag.IsRegistered)
                        {
                            <span>
                                Create new trip
                            </span>
                        }
                        else
                        {
                            <span>
                                Try for free
                            </span>
                        }
                    }

                </a>
            </div>
        </div>
    </header>

    <!-- About section-->
    <section id="about">
        <div class="container px-4 py-1">
            <div class="row gx-4 justify-content-center">
                <div class="col-lg-10">
                    <h2 class="display-4 font-weight-light"> <i class="fa-regular fa-lightbulb"></i>  The idea </h2>
                    <hr />
                    <p class="lead">
                        Tired of searching for places to visit on your road trip? Are you on the way and would like to find interesting places along your route?
                        Trippie automates this boring task, leaving only the fun part of your road trip, <b>exploring the world</b>!
                    </p>

                    <ul>
                        <li> Select start and destination from cities across the globe.</li>
                        <li> Select what type of places you would like to visit along your route.</li>
                        <li> Choose your places using an intuitive user interface.</li>
                        <li> Save your trip and share with your friends.</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Services section-->
    <section id="features" class="bg-light px-4">
